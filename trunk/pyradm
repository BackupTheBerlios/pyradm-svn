#!/usr/bin/python

# FIXME
import sys
sys.path[0] += "/lib"

from pyradm import Help, Config, Options, ConfigException, OptinsException
from pyradm.UI import CLI 

Help["usage"] = """
Usage: pyradm [options]
        -m, -maintain           maintenance mode; don't connect to server
        -c, -config <filename>  use config file other than $HOME/.pyradmrc
        -h, -help               print help text
"""

print Help["usage"]
sys.exit()

try:
  options = Options()

  if options.help:
    print Help["usage"]
  else:
    ui = CLI(Config(options.configFile), options.maintain)
    ui.run()

except OptionsException, e:
  print e
except ConfigException, e:
  print e

